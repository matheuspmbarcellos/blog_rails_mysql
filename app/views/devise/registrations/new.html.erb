<h2 class="text-2xl font-bold text-center mb-6">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "max-w-md mx-auto" }) do |f| %>
  <!-- Exibe erros caso existam -->
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Campo de Email -->
  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent", placeholder: "Digite seu email" %>
  </div>

  <!-- Campo de Senha -->
  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700" %>
    <% if @minimum_password_length %>
      <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent mt-1", placeholder: "Digite sua senha" %>
  </div>

  <!-- Campo de Confirmação de Senha -->
  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-gray-700" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent mt-1", placeholder: "Confirme sua senha" %>
  </div>

  <!-- Botão de Submit -->
  <div class="mb-4">
    <%= f.submit "Sign up", class: "w-full px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors" %>
  </div>
<% end %>

<!-- Links adicionais -->
<div class="text-center">
  <%= render "devise/shared/links" %>
</div>
