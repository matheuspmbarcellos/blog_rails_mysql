<h2 class="text-2xl font-bold text-center mb-6">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "max-w-md mx-auto" }) do |f| %>
  <!-- Exibe erros caso existam -->
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Campo de Email -->
  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent", placeholder: "Digite seu email" %>
  </div>

  <!-- BotÃ£o de Envio -->
  <div class="mb-4">
    <%= f.submit "Send me reset password instructions", class: "w-full px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors" %>
  </div>
<% end %>

<!-- Links adicionais -->
<div class="text-center">
  <%= render "devise/shared/links" %>
</div>
