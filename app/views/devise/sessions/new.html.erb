<% if notice %>
  <p class="bg-green-500 text-white text-center py-2 rounded"><%= notice %></p>
<% elsif alert %>
  <p class="bg-red-100 text-black text-center py-2 rounded"><%= alert %></p>
<% end %>

<h2 class="text-2xl font-bold text-center mb-6">Login</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "max-w-md mx-auto" }) do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700" %>
    <%= f.email_field :email, autofocus: true, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent", placeholder: "Digite seu email" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700" %>
    <%= f.password_field :password, autocomplete: "off", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent", placeholder: "Digite sua senha" %>
  </div>

  <div class="flex items-center justify-between mb-4">
    <div>
      <%= f.check_box :remember_me, class: "mr-2" %>
      <%= f.label :remember_me, class: "text-gray-700" %>
    </div>

    <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "text-sm text-blue-600 hover:text-blue-700" %>
  </div>

  <div class="mb-4">
    <%= f.submit "Entrar", class: "w-full px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors" %>
  </div>
<% end %>

<div class="text-center">
  <%= link_to "Ainda nÃ£o tem uma conta? Registre-se", new_registration_path(resource_name), class: "text-sm text-blue-600 hover:text-blue-700" %>
</div>

