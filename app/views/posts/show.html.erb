<% if notice %>
  <p id="notice" class="bg-green-500 text-white text-center py-2"><%= notice %></p>
<% end %>

<div id="<%= dom_id @post %>" class="bg-white p-4 rounded-lg shadow mb-4 md:flex">
  <div class="h-48 md:h-48 w-full md:w-1/3 overflow-hidden rounded mb-2 md:mb-0 flex-shrink-0">
    <img src="<%= @post.img_url %>" alt="Imagem do post" class="w-full h-full object-cover rounded" />
  </div>

  <div class="mt-2 md:mt-0 md:ml-4 w-full">
    <p class="font-bold">
      <strong>Título:</strong>
      <%= @post.title %>
    </p>

    <p class="my-2">
      <strong>Conteúdo:</strong>
      <%= truncate_html(@post.body, 450) %>
    </p>

    <p class="text-gray-500">
      <strong>Publicação:</strong>
      <%= @post.published_at.strftime('%d %B %Y') %>
    </p>
  </div>
</div>

<div class="flex flex-col md:flex-row justify-start space-y-2 md:space-y-0 md:space-x-4 mb-4">
  <%= link_to "Voltar", admin_posts_path, class: "bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400 transition w-full md:w-auto text-center" %>
  <%= link_to "Editar", edit_post_path(@post), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition w-full md:w-auto text-center" %>
  <%= button_to "Deletar", @post, method: :delete, class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 transition w-full md:w-auto text-center" %>
</div>

<script>
  setTimeout(function() {
    const notice = document.getElementById('notice');
    if (notice) {
      notice.style.display = 'none';
    }
  }, 5000);
</script>
