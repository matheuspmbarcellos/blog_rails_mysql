<% if notice %>
  <p id="notice" class="bg-green-500 text-white text-center py-2"><%= notice %></p>
<% end %>

<div id="posts" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @posts.each do |post| %>
    <div class="p-4 bg-white rounded shadow-md">
      <%= render post %>
      <div class="flex justify-center mt-2">
        <%= link_to "Gerenciar", post, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition" %>
      </div>
    </div>
  <% end %>
</div>

<script>
  setTimeout(function() {
    const notice = document.getElementById('notice');
    if (notice) {
      notice.style.display = 'none';
    }
  }, 5000);
</script>