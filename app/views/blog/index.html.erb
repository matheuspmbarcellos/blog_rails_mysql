<div class="flex flex-col items-center mt-5">
  <% @posts.each do |post| %>
    <div class="w-full md:w-10/12 lg:w-8/12 mb-4">
      <div class="bg-white rounded-lg shadow-md overflow-hidden h-full">
        <div class="md:flex">
          <!-- Coluna da Imagem -->
          <div class="md:w-4/12">
            <%= link_to blog_post_path(post) do %>
              <%= image_tag(post.img_url, class: "w-full h-full object-cover rounded-t-md md:rounded-none md:rounded-l-lg", alt: post.title) if post.img_url.present? %>
            <% end %>
          </div>
          <!-- Coluna do Conteúdo -->
          <div class="md:w-8/12 p-4 flex flex-col">
            <h5 class="text-xl font-semibold mb-2">
              <%= link_to post.title, blog_post_path(post), class: "text-gray-900 hover:text-blue-600" %>
            </h5>
            <p class="text-gray-700 mb-4"><%= truncate_html(post.body, 100) %></p>
            <div class="mt-auto">
              <p class="text-sm text-gray-500">Publicado em <%= post.published_at.strftime('%d %B %Y') %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- Mensagem quando não há posts -->
<% if @posts.empty? %>
  <div class="bg-blue-100 border-t border-b border-blue-500 text-blue-700 px-4 py-3" role="alert">
    Nenhum post encontrado.
  </div>
<% end %>
