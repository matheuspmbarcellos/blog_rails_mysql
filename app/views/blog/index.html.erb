<div class="d-flex flex-column align-items-center mt-5">
    <% @posts.each do |post| %>
        <div class="col-12 col-md-10 col-lg-8 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><%= link_to post.title, blog_post_path(post), class: "text-decoration-none" %></h5>
                    <p class="card-text"><%= truncate_html(post.body, 100) %></p>
                    <div class="mt-auto">
                        <p class="card-text"><small class="text-muted">Publicado em <%= post.date_published.strftime('%d %B %Y') %></small></p>
                        <%= link_to "Leia mais", blog_post_path(post), class: "btn btn-primary" %>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>

<!-- Mensagem quando não há posts -->
<% if @posts.empty? %>
    <div class="alert alert-info" role="alert">
        Nenhum post encontrado.
    </div>
<% end %>