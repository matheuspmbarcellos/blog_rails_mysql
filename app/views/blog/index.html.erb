<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-5">
  <% @posts.each do |post| %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col h-full">
      <!-- Imagem do Post -->
      <%= link_to blog_post_path(post) do %>
        <%= image_tag(post.img_url, class: "w-full h-48 object-cover", alt: post.title) if post.img_url.present? %>
      <% end %>

      <!-- Conteúdo do Post -->
      <div class="p-4 flex flex-col justify-between flex-grow">
        <!-- Título -->
        <h5 class="text-xl font-semibold text-gray-900 hover:text-blue-600 mb-2">
          <%= link_to post.title, blog_post_path(post) %>
        </h5>
        
        <!-- Conteúdo do Post -->
        <p class="text-gray-700 mb-4">
          <%= truncate_html(post.body, 100) %>
        </p>
        
        <!-- Data de Publicação -->
        <p class="text-sm text-gray-500 mt-auto">
          Publicado em <%= post.published_at.strftime('%d %B %Y') %>
        </p>
      </div>
    </div>
  <% end %>
</div>

<!-- Mensagem quando não há posts -->
<% if @posts.empty? %>
  <div class="bg-blue-100 border-t border-b border-blue-500 text-blue-700 px-4 py-3" role="alert">
    Nenhum post encontrado.
  </div>
<% end %>
